{{#if github}}
    <h2>Here you find the GIT repo list</h2>
    <h3>The {{github.user}}'s projects listend below</h3>
    <hr />
    <section>
        <div class="row">
            <div class="col-sm-8">
                {{>githubPager}}
            </div>
            <div class="col-sm-4">
                {{>githubUser}}
            </div>
        </div>
        {{#if github.repos}}
            {{#each github.repos}}
                <article class="well" title="{{this.name}}">
                    <a href="{{this.html_url}}" target="_blank">
                        {{this.name}}
                    </a>
                    <div>
                        Created: {{dateFormat this.created_at}}, Updated: {{dateFormat this.updated_at}}
                    </div>
                </article>
            {{/each}}
            {{>githubPager}}
        {{/if}}
    </section>
{{else}}
    <h2>
        Error! Please choiche antoher repository!
    </h2>
    {{#if error}}
        <p>
            {{{error}}}
        </p>
    {{/if}}
    <hr />
    {{>githubUser}}
{{/if}}